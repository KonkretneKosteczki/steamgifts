{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["./src/utils/*"],
            "@services/*": ["./src/services/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
}
