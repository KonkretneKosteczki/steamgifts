{
    "ts-node": {
        "require": ["tsconfig-paths/register"],
    },
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "paths": {
            "@utils/*": ["./src/utils/*"],
            "@services/*": ["./src/services/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
}
